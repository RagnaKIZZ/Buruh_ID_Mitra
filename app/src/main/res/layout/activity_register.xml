<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.RegisterActivity">

    <LinearLayout
        android:layout_gravity="top"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="false"
        android:focusableInTouchMode="true">
        <FrameLayout
            android:layout_gravity="center"
            android:background="@drawable/substraction2"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_height="@dimen/_100sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:id="@+id/logo_login"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/_70sdp"
                    android:src="@drawable/logo"
                    android:layout_height="@dimen/_70sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:text="Mitra"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/open_sans"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_below="@+id/logo_login"
                    android:textSize="@dimen/_15ssp"/>
            </RelativeLayout>
        </FrameLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_name_register"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:fontFamily="@font/open_sans"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:textSize="@dimen/_12ssp"
                android:inputType="text"
                android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_email_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_5sdp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/open_sans"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_hp_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/phone"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/open_sans"
                android:inputType="number"
                android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_password_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/open_sans"
            android:inputType="textPassword"
            android:imeOptions="actionNext"/>
    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_repassword_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/retype"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/open_sans"
                android:inputType="textPassword"
                android:imeOptions="actionNext"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/type_of_worker"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_30sdp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/open_sans"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_30sdp"/>

        <RadioGroup
            android:id="@+id/radio_group"
            android:checkedButton="@id/rb_1"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_1"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:text="@string/individu_worker"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textSize="@dimen/_12ssp"
                android:layout_height="wrap_content"
                android:text="@string/team_worker"/>

        </RadioGroup>

            <RelativeLayout
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:id="@+id/rv_counter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_counter"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/open_sans"
                    android:layout_centerInParent="true"/>

                <Button
                    android:layout_toEndOf="@id/txt_counter"
                    android:id="@+id/btn_plus"
                    android:text="+"
                    android:background="@drawable/bg_counter_worker"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12ssp"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"/>
                <Button
                    android:layout_toStartOf="@id/txt_counter"
                    android:id="@+id/btn_minus"
                    android:text="-"
                    android:background="@drawable/bg_counter_worker"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_15ssp"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"/>
            </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:text="@string/agree_with"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/txt_term_condition_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/term_and_condition"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_regist_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:background="@drawable/bg_button"
            android:fontFamily="@font/open_sans"
            android:padding="@dimen/_10sdp"
            android:text="@string/register"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15ssp" />

        <LinearLayout
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_an_account"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/open_sans"/>

            <TextView
                android:id="@+id/txt_login_register"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/open_sans"/>
        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>